{
  "manifest_version": 3,
  "name": "Volition-test",
  "description": "Blocks distracting websites and negotiates access via ChatGPT to regain focus.",
  "version": "1.0.1",
  "permissions": ["storage", "tabs", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>", "https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Volition",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "style.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["timer.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 